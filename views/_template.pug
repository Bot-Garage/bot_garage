doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Bot Garage

        //- Favicon
        link(rel="shortcut icon" href="data:,")

        //- Preconnects
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)

        //- Style Sheets
        link(rel="stylesheet" href="/public/css/master.css")
        block css

        //- Fonts
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@100;300;400;700&display=swap" )
        link(rel="stylesheet", href="/public/fontawesome/css/all.min.css")

    body
        #Notifications

        header
            //- Title
            a(href="/home/").title Bot Garage
            
            //- Left Navigation
            nav
                if session.user
                    a(href="/home/") Home
                    a(href="/bots/") Bots
                    a(href="/guilds/") Guilds
                    a(href="/channels/") Channels
                    a(href="/messages/") Messages
                    a(href="/personality/") Personality
            
            //- Right Navigation
            nav.right
                if session.user
                    a(href="/admin/") <i class="fa fa-lg fa-cog"></i> Admin Panel
                    a(href="/profile/") <i class="fa fa-lg fa-user"></i> #{session.user.name}
                    a(href="/logout/") <i class="fa-regular fa-lg fa-circle-xmark"></i> Logout
                else
                    a(href="/login/") Login
                    a(href="/register/") Register



        block body

        script(src="/public/js/jquery-3.7.0.min.js")
        script(src="/public/js/master.js")
        script(src="https://cdn.jsdelivr.net/npm/sweetalert2@11")
        block js