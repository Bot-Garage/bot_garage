extends _template

block css

block body
    main
        .container
            .card
                .card-title Personality
                .card-body
                    form.form-control(name="create_personality")
                        .row
                            .col-3
                                    input(type="text" name="name" placeholder="Personality Name")
                            .col-2
                                button(type="submit").btn-block.btn-info Create New Personality
            .card
                .card-body-skinny
                    table.table-control
                        tr
                            th Name
                            th ID
                            th System
                            th Content
                            th Actions
                        each personality in personalities
                            tr
                                td #{personality.name}
                                    a.edit-button(data-action="personality-edit-name" data-id=personality.id)
                                td #{personality.id}
                                td #{personality.system}
                                td #{personality.content}
                                    a.edit-button(data-action="personality-edit-content" data-id=personality.id)
                                td: a(data-action="personality-delete" data-id=personality.id) Delete

block js
    script(src="/public/js/personality.js") 